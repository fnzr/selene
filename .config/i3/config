bindsym $super+grave [instance="scratchpad"] scratchpad show, move position center
bindsym Shift+$super+grave move scratchpad
bindsym Control+$super+grave scratchpad show

bindsym --whole-window $super+button2 kill
bindsym --release button2 kill

