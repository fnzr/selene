bindsym $super+$up workspace prev_on_output
bindsym $super+$down workspace next_on_output

bindsym Shift+$super+$up move container to workspace prev_on_output,workspace prev_on_output
bindsym Shift+$super+$down move container to workspace next_on_output,workspace next_on_output

bindsym $super+$left focus left
bindsym $super+$right focus right

bindsym Shift+$super+$left move left
bindsym Shift+$super+$right move right

bindsym Shift+$super+space move container to output next
bindsym $super+space focus output next
bindsym $super+Return exec ~/.config/i3/scripts/empty_workspace_follow

